<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", albums_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_album_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", album_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.album.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @album.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.album.artist", :default => t("activerecord.labels.artist", :default => "Artist")) %>:</b>
          <%= @album.artist %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.album.date", :default => t("activerecord.labels.date", :default => "Date")) %>:</b>
          <%= @album.date %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_album_path(@album), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), album_path(@album), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>